{
  "name": "sistema-centros-barriales",
  "version": "1.0.0",
  "description": "Sistema de Gesti√≥n de Centros Barriales",
  "main": "server.js",
  "scripts": {
    "dev": "next dev --turbo",
    "dev:swc": "set SWC_BINARY_PATH= && next dev",
    "dev:legacy": "set NODE_OPTIONS=--max-old-space-size=4096 && npx next dev --no-turbo",
    "dev:simple": "npx next dev --port=3001 --hostname=0.0.0.0",
    "build": "next build",
    "start": "next start",
    "server": "nodemon server/server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev:legacy\"",
    "install:all": "npm install && cd server && npm install"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@next/swc-win32-x64-msvc": "^16.1.6",
    "autoprefixer": "^10.4.0",
    "axios": "^1.6.0",
    "date-fns": "^2.30.0",
    "next": "^14.2.35",
    "postcss": "^8.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.0",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.0"
  }
}
